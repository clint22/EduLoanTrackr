<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_loan_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.example.appathon.eduloantracker.Views.LoanDetailActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/lin_loan_balance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E0E0E0"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Loan Information"
                android:textColor="#004D40"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:text="Loan Balance"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edtxt_loan_bal"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:inputType="numberDecimal"
                android:layout_marginLeft="30dp"
                android:focusable="false"
                android:layout_marginTop="10dp"
                android:background="#EEEEEE"
                android:padding="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:text="Interest Rate"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edtxt_interest_rate"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:inputType="numberDecimal"
                android:focusable="false"
                android:background="#EEEEEE"
                android:padding="15dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:text="Loan Term"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edtxt_tenure"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:background="#EEEEEE"
                android:inputType="numberDecimal"
                android:hint="Enter your Loan Term"
                android:padding="15dp" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonGenerate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/ripple_background_primary"
                android:minHeight="0dp"
                android:padding="15dp"
                android:text="Add your Loan"
                android:textColor="#ffffff"
                android:textSize="15dp" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
