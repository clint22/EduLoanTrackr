<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.viji.eduloantracker.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/img_dollar_symbol"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginTop="75dp"
            android:src="@drawable/dollar"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="EDULOANTRACKR_"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FAFAFA"
            android:layout_below="@+id/img_dollar_symbol"/>

        <ImageView
            android:id="@+id/img_usr"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/username"
            android:layout_width="25sp"
            android:layout_height="25sp"
            />

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="220dp"
            android:layout_toRightOf="@+id/img_usr"
            android:id="@+id/txt_input_layout_hmsaddress_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#EEEEEE"
            android:padding="10dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/hmsaddressProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginStart="10sp"
                android:hint="Username"
                android:backgroundTint="#EEEEEE"
                android:imeOptions="actionNext"
                android:inputType="textMultiLine"
                android:nextFocusDown="@+id/addressRegister"
                android:singleLine="true"
                android:textColor="#212121" />
        </android.support.design.widget.TextInputLayout>


        <ImageView
            android:id="@+id/img_password"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/password"
            android:layout_below="@+id/img_usr"
            android:layout_width="25sp"
            android:layout_height="25sp"
            />

        <android.support.design.widget.TextInputLayout
            android:layout_toRightOf="@+id/img_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#EEEEEE"
            android:layout_below="@+id/img_usr"
            android:padding="10dp">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20sp"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:layout_marginStart="10sp"
                android:hint="Password"
                android:backgroundTint="#EEEEEE"
                android:imeOptions="actionNext"
                android:inputType="textMultiLine"
                android:nextFocusDown="@+id/addressRegister"
                android:singleLine="true"
                android:textColor="#212121" />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/btn_signin"
            android:text="SIGN IN"
            android:textAllCaps="false"
            android:textColor="#FAFAFA"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/img_password"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btnbackground"
            android:layout_width="200dp"
            android:layout_height="50dp" />



    </RelativeLayout>



</RelativeLayout>
