<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rel_layout_one"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/desc_ref_loan"
            android:text="Refinance Your Loan"
            android:layout_marginLeft="20dp"
            android:textSize="22sp"
            android:textColor="#616161"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/tickone"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/desc_ref_loan"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/tick"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tickone"
            android:layout_below="@+id/desc_ref_loan"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="Lower Monthly Payments"
            android:textSize="16sp"
            android:textColor="#9E9E9E"/>

        <ImageView
            android:id="@+id/ticktwo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/tickone"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/tick"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ticktwo"
            android:layout_below="@+id/tickone"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Release a cosigner"
            android:textSize="16sp"
            android:textColor="#9E9E9E"/>

        <ImageView
            android:id="@+id/tickthree"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/ticktwo"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/tick"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tickthree"
            android:layout_below="@+id/ticktwo"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="One Payment"
            android:textSize="16sp"
            android:textColor="#9E9E9E"/>

        <ImageView
            android:id="@+id/tickfour"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/tickthree"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/tick"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tickfour"
            android:layout_below="@+id/tickthree"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Flexible repayment terms"
            android:textSize="16sp"
            android:textColor="#9E9E9E"/>

        <Button
            android:id="@+id/btnOne"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tickfour"
            android:layout_centerHorizontal="true"
            android:text="GET YOUR FREE PLAN"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_btn"/>

    </RelativeLayout>

    <View
        android:id="@+id/hor_line_one"
        android:layout_below="@+id/rel_layout_one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>

    <RelativeLayout
        android:layout_below="@+id/hor_line_one"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:id="@+id/rel_layout_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/desc_tenure_loan"
            android:text="Reduce your Term of Loan"
            android:layout_marginLeft="20dp"
            android:textSize="22sp"
            android:textColor="#616161"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/tickfive"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/desc_tenure_loan"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/tick"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tickfive"
            android:layout_below="@+id/desc_tenure_loan"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="Save your interest rate"
            android:textSize="16sp"
            android:textColor="#9E9E9E"/>

        <ImageView
            android:id="@+id/ticksix"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/tickfive"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/tick"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ticksix"
            android:layout_below="@+id/tickfive"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Save your total amount"
            android:textSize="16sp"
            android:textColor="#9E9E9E"/>


        <ImageView
            android:id="@+id/tickseven"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/ticksix"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/tick"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tickseven"
            android:layout_below="@+id/ticksix"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Finish your loans quickly"
            android:textSize="16sp"
            android:textColor="#9E9E9E"/>


        <Button
            android:id="@+id/btntwo"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tickseven"
            android:layout_centerHorizontal="true"
            android:text="GET YOUR FREE PLAN"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_btn"/>


    </RelativeLayout>



</RelativeLayout>